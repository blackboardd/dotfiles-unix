alias firefox=false
alias p=false
alias gs=false
alias gm=false
alias vi=false
alias help=false
# alias vlc=false
alias craftenv="source ~/CraftRoot/craft/craftenv.sh"
alias help=run-help
alias gimmekeys=false
alias expowebcam="webcam exposure"

# abbr --quiet -S vlc="/usr/bin/vlc --intf http --http-host 127.0.0.1:9090"
abbr --quiet -S p="paru -S --noconfirm"
abbr --quiet -S s="abbr clear-session && source_files $files"
abbr --quiet -S firefox="firefox-nightly -start-debugger-server"
abbr --quiet -S fk='fuck'
abbr --quiet -S tz='sudo ntpd -qg'
abbr --quiet -S 'gimmekeys=sudo xmodmap -e "clear lock" && setxkbmap -option ctrl:nocaps && setxkbmap -option caps:escape && xmodmap $HOME/.Xmodmap && xinput --set-prop "pointer:Razer Razer DeathAdder V2" $RAZER_MOUSE_SPEED_PROP -0.8'

# automt automatically mounts all available drives
abbr --quiet -S automt='sudo mount -a'
abbr --quiet -S lsc="colorls"

abbr --quiet -S kb="kubectl -n"
abbr --quiet -S kbd="kubectl"
abbr --quiet -S slackt="slack-term -config ~/.slack"
abbr --quiet -S mutt="neomutt"
abbr --quiet -S sl="ls"
alias vi=nvim

abbr --quiet -S "cfg"="move_to_config_env"

abbr --quiet -S clip="clip.exe"
abbr --quiet -S v4l2reset="sudo rmmod v4l2loopback"

bindkey " " abbr-expand-and-space
